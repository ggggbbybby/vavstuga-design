<h2>Edit Profile Draft</h2>

<main>
  <%= javascript_tag do %>
    window.draft = <%= @draft.to_json.html_safe %>
  <% end %>

  <div id="edit-frame" style="display: flex; flex-wrap: wrap;">
    <div style="display: block">
      <%= render 'drawdown', draft: @draft, mode: :edit %>
      <br />
      <button id="add-warp-threads">Add Warp Threads (+5)</button>
      <button id="add-weft-picks">Add Weft Picks (+5)</button>
    </div>
    <div id="swatches"></div>
    
  </div>
  
  <%= render 'form', draft: @draft %>
</main>

