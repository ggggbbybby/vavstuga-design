<!DOCTYPE html>
<html>
  <head>
    <title>VavstugaDesign</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-content" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">vavstuga.design</a>
        </div>

        <div class="collapse navbar-collapse" id="navbar-content">
          <ul class="nav navbar-nav">
            <li><%= link_to "Patterns", patterns_path %></li>
            <li><%= link_to "Yarns", yarns_path %></li>
            <% if can?(:read, User) %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to "Change Password", edit_user_registration_path %>
              </li>
              <li>
                <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
              </li>
            <% else %>
              <li>
                <%= link_to('Login', new_user_session_path)  %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

  <script type="text/javascript">
    <!-- declare globals for laziness -->
    <% if @pattern&.yarn %>
      var defaults = <%= @pattern.default_colors.to_json.html_safe %>;
      var colors = <%= @pattern.yarn.colors.to_json.html_safe %>;
      var bg = function(color) {
        return `url("https://store.vavstuga.com/mm5/graphics/00000001/<%= @pattern.yarn.slug %>-${color}.jpg")`
      };

      var colorName = function(color_code) {
        return colors.find(function(c) {
          return c.code == color_code;
        }).name;
      };
    <% end %>
  </script>
  </body>
</html>
